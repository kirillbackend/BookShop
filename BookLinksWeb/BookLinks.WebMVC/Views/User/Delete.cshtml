@model BookLinks.WebMVC.Models.UserModel
@{
    ViewData["Title"] = "MyDelete";
}
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <h2>
                        Вы уверены что хотите удалить аккаунт "@Html.DisplayFor(m => m.Name)"?
                    </h2>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="col-md-12">
                        <div>
                            <h4>
                                <label> Рэйтинг </label>
                                @Html.DisplayFor(model => model.Name)
                                <label> ★ </label>
                            </h4>
                        </div>
                        <div>
                            <h4>
                                <label> Дата релиза </label>
                                @Html.DisplayFor(model => model.LoginName)
                            </h4>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <button type="submit" value="Да" class="btn btn-success mt-4 mb-2 rounded-pill">
            Да
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
            </svg>
        </button>
        <a onclick="history.back()" class="btn btn-danger mt-4 mb-2 rounded-pill">
            Нет
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </a>
    </form>
</div>

