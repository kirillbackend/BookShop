@model BookLinks.WebMVC.Models.UserModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создание пользователя.</h1>

<div class="row">
    <div class="form-floating mb-3">
        @using (Html.BeginForm("Create", "User", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="@Model.Name" class="control-label mt-2"></label>
                <input asp-for="@Model.Name" class="form-control mt-2" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label mt-2"></label>
                <input asp-for="@Model.Email" class="form-control mt-2" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone" class="control-label mt-2"></label>
                <input asp-for="@Model.Phone" class="form-control mt-2"/>
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address" class="control-label mt-2"></label>
                <input asp-for="@Model.Address" class="form-control mt-2" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LoginName" class="control-label mt-2"></label>
                <input asp-for="@Model.LoginName" class="form-control mt-2" />
                <span asp-validation-for="@Model.LoginName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PwdHash" class="control-label mt-2"></label>
                <input asp-for="@Model.PwdHash" class="form-control mt-2" />
                <span asp-validation-for="@Model.PwdHash" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="@Model.Role" class="control-label mt-2"></label>
                    <select asp-for="@Model.Role" class="form-select">
                        @foreach (var item in Enum.GetValues(typeof(UserRoleEnum))
                       .Cast<UserRoleEnum>()
                       .Select(e => new { Name = e.ToString() }))
                        {
                            <option value="@item.Name"> @item.Name </option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Role" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Role" class="form-control mt-2" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success mt-4 mb-2 rounded-pill" />
                <a asp-action="Index" class="btn btn-danger mt-4 mb-2 rounded-pill">Назад</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

