@model List<BookLinks.WebMVC.Models.BookModel>

@{
    ViewData["Title"] = "Каталог";
}

<div class="container-fluid">
    <h1 class="text-center">
        @ViewData["Title"]
    </h1>
</div>

@foreach (var row in Model
   .Select((item, index) => new { item, index })
   .GroupBy(_ => _.index / 4, _ => _.item))
{
    <div class="row">
        @foreach (var item in row)
        {
            <div class="col-3 mb-2">
                <div>
                    <div class="mb-2">
                        @if (item.ImageContent == "")
                        {
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id"><img src="/img/notimage.jpg" width="280" height="390" /></a>
                        }
                        else
                        {
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id"><img src="@item.ImageContent" width="280" height="390" />
                            </a>
                        }
                    </div>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <div>
                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="@item.Id" name="bookId" type="hidden" class="form-control" />
                                    @if (ViewBag.Order.Contains(item.Id))
                                    {
                                        <button class="btn btn-outline-success col-11" asp-controller="Basket" asp-action="Index">
                                            Перейти в корзину
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                                                <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
                                                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                            </svg>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success col-11">
                                            Добавить в корзину
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16">
                                                <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z" />
                                                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                            </svg>
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                    <div class="mb-2">
                        <div class="col-10">
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">
                                <span>@item.Name</span> <br>
                                <span>@item.Author</span> <br>
                                <span>Рэйтинг:  @item.Rating</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
