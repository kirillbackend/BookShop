@model BookLinks.Repositories.Models.LoginModel

<div class="row mt-5">
    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">Вход</h3>

                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <input id="Scope" name="returnURL" type="hidden" value="@ViewBag.returnURL">

                    <div class="form-group mb-3">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Имя", autocomplete = "off", name = "name" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль", autocomplete = "off", name = "password" })
                    </div>

                    <span class="text-danger">@Html.ValidationSummary(true)</span>

                    <div class="form-actions text-center">
                        <button type="submit" class="btn btn-success rounded-pill">Войти</button>
                    </div>
                }
            </div>
        </div>
        <p class="text-center">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-danger mt-4 rounded-pill">Вернуться на Главную страницу</a>
        </p>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
    </div>
</div>