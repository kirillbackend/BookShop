@model BookLinks.WebMVC.Models.LinkModel

@{
    ViewData["Title"] = "Изменение ссылки";
}

<div class="container-fluid">
    <h1 class="text-center">
        @ViewData["Title"]
    </h1>
</div>

<h4>Изменение ссылки № @Model.Id</h4>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.BookId" class="control-label"></label>
                <select asp-for="@Model.BookId" class="form-select">
                    @foreach (var item in ViewBag.Books)
                    {
                        <option value="@item.Id">@item.Id - @item.Name - @item.Author</option>
                    }
                </select>
                <span asp-validation-for="@Model.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Path" class="control-label"></label>
                <input asp-for="@Model.Path" class="form-control" />
                <span asp-validation-for="@Model.Path" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" value="Сохранить изменения" class="btn btn-success rounded-pill">
                    Сохранить изменения
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                    </svg>
                </button>
                <a onclick="history.back()" class="btn btn-danger mt-2 mb-2 rounded-pill">
                    Назад
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
