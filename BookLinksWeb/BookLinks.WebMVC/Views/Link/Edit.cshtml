@model BookLinks.Repositories.Models.Link

@{
    ViewData["Title"] = "Edit";
}

<h4>Изменение ссылки № @Model.Id</h4>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.BookId" class="control-label"></label>
                <select asp-for="@Model.BookId" class="form-select">
                    @foreach (var item in ViewBag.Books)
                    {
                        <option value="@item.Id">@item.Id - @item.Name - @item.Author</option>
                    }
                </select>
                <span asp-validation-for="@Model.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Path" class="control-label"></label>
                <input asp-for="@Model.Path" class="form-control" />
                <span asp-validation-for="@Model.Path" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Сохранить изменения" class="btn btn-success rounded-pill" />
                <a onclick="history.back()" class="btn btn-danger mt-4 mb-2 rounded-pill">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
