@model BookLinks.WebMVC.Models.BookModel

@{
    ViewData["Title"] = "Создание книги";
}

<div class="container-fluid">
    <h1 class="text-center">
        @ViewData["Title"]
    </h1>
</div>

<div class="row">
    <div class="form-floating mb-3">
        @using (Html.BeginForm("Create", "Book", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="@Model.Name" class="control-label mt-2"></label>
                <input asp-for="@Model.Name" class="form-control mt-2" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="@Model.Price" class="control-label mt-2"></label>
                <input asp-for="@Model.Price" class="form-control mt-2" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Author" class="control-label mt-2"></label>
                <input asp-for="@Model.Author" class="form-control mt-2" />
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label mt-2"></label>
                <textarea asp-for="@Model.Description" class="form-control mt-2" rows="4"> </textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Released" class="control-label mt-2"></label>
                <input asp-for="@Model.Released" class="form-control mt-2" />
                <span asp-validation-for="@Model.Released" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Rating" class="control-label mt-2"></label>
                <input asp-for="@Model.Rating" class="form-control mt-2" />
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.OriginalFileName" class="control-label mt-2"></label>
                <input asp-for="@Model.OriginalFileName" class="form-control mt-2" type="file" />
                <span asp-validation-for="@Model.OriginalFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Создать" class="btn btn-success mt-4 mb-2 rounded-pill">
                    Создать
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                    </svg>
                </button>
                <a onclick="history.back()" class="btn btn-danger mt-4 mb-2 rounded-pill">
                    Отмена
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
