@model BookLinks.Repositories.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h4>Изменение книги.</h4>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Author" class="control-label"></label>
                <input asp-for="@Model.Author" class="form-control" />
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Released" class="control-label"></label>
                <input asp-for="@Model.Released" class="form-control" />
                <span asp-validation-for="@Model.Released" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label"></label>
                <textarea asp-for="@Model.Description" class="form-control mt-2" rows="4"> </textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Rating" class="control-label mt-2"></label>
                <input asp-for="@Model.Rating" class="form-control mt-2" />
                <span asp-validation-for="@Model.Rating" class="text-danger mt-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.OriginalFileName" class="control-label mt-2"> Обложка книги </label>
                <input asp-for="@Model.OriginalFileName" class="form-control" type="file">
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Links" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Сохранить изменения" class="btn btn-success rounded-pill" />
                <a onclick="history.back()" class="btn btn-danger rounded-pill">Отмена</a>
            </div>
            <div class="form-group mt-2">
                <input type="hidden" asp-for="@Model.Created" class="form-control" />
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-4">
            @Html.Label("Дата последнего изменения книги"):
            @Model.Update
        </div>
        <div class="col-md-4">
            @Html.Label("Дата создания книги"):
            @Model.Created
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
