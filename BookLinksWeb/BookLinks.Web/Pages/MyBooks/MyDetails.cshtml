@page
@model BookLinks.Web.Pages.MyBooks.MyDetailsModel
@{
    ViewData["Title"] = "MyDetails";
}

<div>
    <h2>Книга - @Html.DisplayFor(model => model.Book.Id)</h2>
    <div class="col-md-4">
        <h4>
            @Html.DisplayFor(model => model.Book.Name) -
            @Html.DisplayFor(model => model.Book.Released)
        </h4>
    </div>
    <div class="col-md-4">
        <h6>
            @Html.DisplayFor(model => model.Book.Author)
        </h6>
    </div>
    <div class="col-md-4 mt-4">
        <h5>Описание</h5>
        @Html.DisplayFor(model => model.Book.Description)
    </div>
    <div class="mt-2">
        @foreach (var item in Model.Book.Links)
        {
            <a href="@item.Path" class="btn btn-success rounded-pill mt-2" target=" _blank"> Ссылка на книгу № @item.Id</a> <br />
        }
    </div>
    <div>
        <a asp-page="./My" class="btn btn-success mt-4 rounded-pill">Назад</a>
    </div>
</div>